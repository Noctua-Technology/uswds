{
  "name": "@noctuatech/uswds",
  "version": "1.0.0",
  "type": "module",
  "workspaces": [
    "packages/**"
  ],
  "main": "./target/lib.js",
  "module": "./target/lib.js",
  "exports": {
    ".": {
      "import": "./target/lib.js"
    },
    "./define.js": {
      "import": "./target/define.js"
    },
    "./*": {
      "import": "./target/lib/*"
    }
  },
  "files": [
    "src",
    "target"
  ],
  "scripts": {
    "test": "wireit",
    "build": "wireit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "wireit",
    "gen": "plop",
    "prepare": "husky"
  },
  "wireit": {
    "test": {
      "command": "wtr",
      "dependencies": [
        "tsc"
      ]
    },
    "build": {
      "dependencies": [
        "tsc",
        "build-storybook"
      ]
    },
    "build-storybook": {
      "command": "storybook build"
    },
    "tsc": {
      "command": "tsc --build --pretty",
      "clean": "if-file-deleted",
      "files": [
        "src/**",
        "tsconfig.json"
      ],
      "output": [
        "target/**",
        "tsconfig.tsbuildinfo"
      ],
      "dependencies": [
        "./packages/testing:build"
      ]
    }
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@joist/di": "^4.0.0-next.21",
    "@joist/element": "^4.0.0-next.21",
    "@joist/observable": "^4.0.0-next.21",
    "tslib": "2.8.1"
  },
  "devDependencies": {
    "@open-wc/testing": "^4.0.0",
    "@storybook/addon-essentials": "^8.4.4",
    "@storybook/blocks": "^8.4.4",
    "@storybook/test": "^8.4.4",
    "@storybook/web-components": "^8.4.4",
    "@storybook/web-components-vite": "^8.4.4",
    "@types/mocha": "^10.0.7",
    "@types/node": "^22.0.0",
    "@web/test-runner": "^0.19.0",
    "husky": "^9.0.11",
    "js-beautify": "^1.15.1",
    "lint-staged": "^15.2.2",
    "lit": "^3.2.1",
    "mocha": "^10.7.3",
    "plop": "^4.0.1",
    "prettier": "^3.3.3",
    "storybook": "^8.4.4",
    "typescript": "^5.6.3",
    "wireit": "^0.14.9"
  },
  "lint-staged": {
    "*.{js,ts,css,md}": "prettier --write"
  }
}
